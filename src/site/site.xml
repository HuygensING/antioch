<project xmlns="http://maven.apache.org/DECORATION/1.4.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.4.0 http://maven.apache.org/xsd/decoration-1.4.0.xsd">

  <publishDate position="bottom"/>
  <version position="bottom"/>

  <bannerLeft>
    <name><![CDATA[<span class="color-highlight">Alexandria</span> Text Annotation Repository]]>
    </name>
    <href>http://HuygensING.github.io/alexandria</href>
  </bannerLeft>

  <skin>
    <groupId>lt.velykis.maven.skins</groupId>
    <artifactId>reflow-maven-skin</artifactId>
    <version>1.1.1</version>
  </skin>

  <body>
    <links>
      <item name="GitHub project" href="http://github.com/HuygensING/alexandria/"/>
    </links>

    <breadcrumbs>
      <item name="Alexandria" href="/"/>
    </breadcrumbs>

    <menu name="Main" inherit="top">
      <item name="Home" href="./"/>
      <item name="GitHub project" href="http://github.com/HuygensING/alexandria/"/>
      <item name="Release notes" href="release-notes.html"/>
    </menu>
    <menu name="Download" inherit="top">
      <item name="Download" href="skin/index.html#Usage"/>
      <item name="License" href="license.html"/>
    </menu>
    <menu name="Documentation" inherit="bottom">
      <item name="Early REST discussion" href="REST.html"/>
      <item name="REST Acceptance Tests"
            href="alexandria-acceptance-tests/concordion/nl/knaw/huygens/alexandria/Alexandria.html"/>
    </menu>
    <menu name="Maven documentation" ref="reports" inherit="bottom"/>
  </body>

  <custom>
    <reflowSkin>
      <protocolRelativeURLs>false</protocolRelativeURLs>
      <smoothScroll>true</smoothScroll>
      <!--<theme>bootswatch-spacelab</theme>-->
      <theme>default</theme>
      <highlightJs>true</highlightJs>
      <highlightJsTheme>github</highlightJsTheme>
      <brand>
        <name>
          <![CDATA[<span class="color-highlight">Alexandria</span> Text Annotation Repository]]>
        </name>
        <href>http://alexandria.huygens.knaw.nl</href>
      </brand>
      <slogan>Enrich and explore any Text with any Annotation</slogan>
      <titleTemplate>%2$s | %1$s</titleTemplate>
      <toc>top</toc>
      <tocTopMax>6</tocTopMax>
      <topNav>Documentation|Download</topNav>
      <bottomNav>
        <column>Main</column>
        <column>Download</column>
        <column>Documentation</column>
        <column>reports</column>
      </bottomNav>
      <bottomDescription>
        <![CDATA[<span class="color-highlight">Alexandria</span> Text Annotation Repository]]>
        is a repository for adding and querying heterogeneous annotations on any kind of text
        or segment of a text.
        Both texts maintained by the repository as well as texts registered at the repository
        but maintained elsewhere can be annotated and queried.
      </bottomDescription>
      <pages>
        <index project="alexandria">
          <shortTitle>Welcome</shortTitle>
          <breadcrumbs>false</breadcrumbs>
          <markPageHeader>false</markPageHeader>
          <toc>false</toc>
          <sections>
            <!--<carousel/>-->
            <body/>
            <!--<sidebar/>-->
            <!--<thumbs>2</thumbs>-->
            <!--<columns>3</columns>-->
          </sections>
        </index>
        <!-- Disable source highlighting for Maven reports -->
        <source-repository>
          <highlightJs>false</highlightJs>
        </source-repository>
        <issue-tracking>
          <highlightJs>false</highlightJs>
          <toc>false</toc>
        </issue-tracking>
        <license>
          <highlightJs>false</highlightJs>
          <toc>false</toc>
        </license>
        <!-- Disable ToC for some Maven reports -->
        <project-info>
          <toc>false</toc>
        </project-info>
        <github-report>
          <toc>false</toc>
        </github-report>
        <dependencies>
          <tocTopMax>4</tocTopMax>
        </dependencies>
      </pages>
    </reflowSkin>
  </custom>
</project>
